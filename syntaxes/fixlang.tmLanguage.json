{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "fixlang",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#supports"
		},
		{
			"include": "#storages"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"comment": "line comment start with //",
					"name": "comment.line",
					"match": "//.*"
				},
				{
					"comment": "comment block is surrounded by /* */",
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"match": "\\b(if|else|do)\\b",
					"name": "keyword.control"
				},
				{
					"match": "\\b(let|=|in)\\b",
					"name": "keyword.let"
				},
				{
					"match": "\\b(import)\\b",
					"name": "keyword.import"
				},
				{
					"match": "(==|!=|<=|>=|<[^<]|>[^>])",
					"name": "keyword.operator"
				},
				{
					"match": "(\\+|\\-|\\*|/|%)",
					"name": "keyword.operator"
				},
				{
					"match": "(\\.|\\$|>>|<<)",
					"name": "keyword.functional"
				},
				{
					"match": "\\b(\\->)\\b",
					"name": "keyword.operator"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language",
					"match": "\\b(true|false|nullptr)\\b"
				},
				{
					"name": "constant.numeric",
					"match": "\\b((\\-)?[0-9]+(\\.[0-9]+)?(e[\\+|\\-]?[0-9]+)?)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		},
		"supports": {
			"patterns": [
				{
					"match": "\\b([A-Z][A-Za-z0-9]*)\\b",
					"name": "support.class"
				}
			]
		},
		"storages": {
			"patterns": [
				{
					"match": "\\b(type|struct|union|module|namespace|impl|trait)\\b",
					"name": "storage.type"
				},
				{
					"match": "\\b(box|unbox)\\b",
					"name": "storage.modifier"
				}
			]
		}
	},
	"scopeName": "source.fix"
}